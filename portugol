// faça um programa em portugol que escreva o nome dos 5 memnbros de um grupo e suas respctivas idades e
// infome o nome da pessoa pessoa mais velha, utilizando Se/Senao

programa {
  funcao inicio() {
    
    cadeia nome1, nome2, nome3, nome4, nome5, mais_velho
    inteiro idade1, idade2, idade3, idade4, idade5, maior_idade

    escreva("Digite o nome do 1º membro: ")
     leia(nome1)
    escreva("Digite a idade de " + nome1 + ": ")
     leia(idade1)

    escreva("Digite o nome do 2º membro: ")
     leia(nome2)
    escreva("Digite a idade de " + nome2 + ": ")
     leia(idade2)

     escreva("Digite o nome do 3º membro: ")
     leia(nome3)
    escreva("Digite a idade de " + nome3 + ": ")
     leia(idade3)

    escreva("Digite o nome do 4º membro: ")
     leia(nome4)
    escreva("Digite a idade de " + nome4 + ": ")
     leia(idade4)

    escreva("Digite o nome do 5º membro: ")
     leia(nome5)
    escreva("Digite a idade de " + nome5 + ": ")
     leia(idade5)

    maior_idade = idade1
    mais_velho = nome1

    se (idade2 >= maior_idade){
      mais_velho = nome2
      maior_idade = idade2
    }
    senao{}

    se (idade3 >= maior_idade){
      mais_velho = nome3
      maior_idade = idade3
    }
    senao{}

    se (idade4 >= maior_idade){
      mais_velho = nome4
      maior_idade = idade4
    }
    senao{}

    se (idade5 >= maior_idade){
      mais_velho = nome5
      maior_idade = idade5
    }
    escreva("A pessoa que completou mais primaveras foi "+ mais_velho + ", com " + maior_idade + " anos")
    }
}
